<div id='header'>
  <% if !@user %>
    <div class='twelve columns'>
      <h1 class='logo'>Dropbox IDE</h1>
    </div>
    <div class='four columns'>
      <a href='<%= @authorize_url %>' class='full-width button'>Login with Dropbox</a>
    </div>
  <% else %>
    <div class='one-third column'>
      <h1 class='logo'>Dropbox IDE</h1>
    </div>
      <a href='/logout' class='logout command button'>Logout</a>
      <button class='editor-button command button'>Vim</button>
      <button class='editor-button command button'>Emacs</button>
      <button class='editor-button command button'>Normal</button>
      <a href='http://dl.dropbox.com/u/<%= @user.dropbox_id %>/DBIDE/' class='viewsite command button' target='_blank'>View Site</a>
  <% end %>
</div>
<hr class='half-bottom' />